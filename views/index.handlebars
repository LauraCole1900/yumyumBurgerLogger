<div class="jumbotron">
  <h1>Yum Yum Burger Barn!</h1>
</div>

<div class="row">
  <main class="card burgers float-left">
    <div class="card-body">
      <h2>Burgers ready to be devoured:</h2>

      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block devoured=true}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>
  </main>

  <main class="card burgers float-right">
    <div class="card-body">
      <h2>Burgers that have been devoured:</h2>

      <ul>
        {{#each burgers}}
          {{#if devoured}}
            {{> burgers/burger-block devoured=false}}
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </main>
</div>

<div class="row">
  <div class="card addburger">
    <div class="card-body">
      <h2>Add a Burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="bur">Burger Name:</label>
          <input type="text" id="bur" name="name">
        </div>

        <div class="form-group">
          <label for="devoured">Devoured?</label><br>
          <input type="radio" name="devoured" value="1" checked> Devoured!<br>
          <input type="radio" name="devoured" value="0"> Not devoured!
        </div>

        <button type="submit">Add Burger</button>
      </form>
    </div>
  </div>
</div>