<div class="jumbotron">
  <h1>Yum Yum Burger Barn!</h1>
</div>

<div class="container">
  <div class="row">
    <main class="col-sm-5">
      <h2>Burgers ready to be devoured:</h2>

      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burger-block devoured=true}}
          {{/unless}}
        {{/each}}
      </ul>
    </main>

    <div class="col-sm-2"></div>

    <main class="col-sm-5">
      <h2>Burgers that have been devoured:</h2>

      <ul>
        {{#each burgers}}
          {{#if devoured}}
            {{> burger-block devoured=false}}
          {{/if}}
        {{/each}}
      </ul>
    </main>
  </div>

  <div class="row">
    <h2>Add a Burger</h2>
  </div>
  <div class="row">
    <form class="create-form">

      <div class="form-group">
        <label for="bur">Burger Name:</label>
        <input type="text" id="bur" name="name">
      </div>

      <div class="form-group">
        <label for="devoured">Devoured?</label><br>
        <input type="radio" name="devoured" value="1"> Devoured!<br>
        <input type="radio" name="devoured" value="0" checked> Not devoured!
      </div>

      <button type="submit">Add Burger</button>
    </form>

  </div>
</div>